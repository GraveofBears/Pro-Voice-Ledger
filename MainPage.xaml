<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.MainPage"
             Title="ProVoice Ledger">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- 🔐 Login Section -->
            <Label Text="🔐 Login" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Button Text="Login" Clicked="OnLoginClicked" />

            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20,0,0" />

            <!-- 🎙️ Recording Console (optional preview) -->
            <Label Text="🎙️ Recording Preview" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry x:Name="SessionNameEntry" Placeholder="Session Name (optional)" />

            <Button x:Name="RecordButton" Text="Start Demo Recording"
                    Clicked="OnStartRecordingClicked" IsEnabled="True" />

            <!-- 📊 Feedback -->
            <Label x:Name="CounterBtn" Text="Ready" FontSize="18" HorizontalOptions="Center" />

            <!-- 💫 Visual Overlays -->
            <Image x:Name="_iconOverlay" HeightRequest="64" WidthRequest="64"
                   HorizontalOptions="Center" Opacity="0.8" />

            <BoxView x:Name="ShimmerOverlay" IsVisible="False" BackgroundColor="#44FFFFFF" HeightRequest="20" />
            <BoxView x:Name="ConfirmSaveOverlay" IsVisible="False" BackgroundColor="#AAFFAA" HeightRequest="30" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
