<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProVoiceLedger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ProVoiceLedger.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Dictate"
            Icon="microphone.png"
            ContentTemplate="{DataTemplate pages:RecordingPage}"
            Route="main" />

        <ShellContent
            Title="History"
            Icon="history.png"
            ContentTemplate="{DataTemplate pages:SessionHistoryPage}"
            Route="history" />
    </TabBar>

    <!-- Optional route outside tab bar for login screen -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        IsVisible="False" />
</Shell>
